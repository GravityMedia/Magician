{
    "name": "gravitymedia/magickly",
    "description": "Magickly is an image processing library for PHP.",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel SchrÃ¶der",
            "email": "daniel.schroeder@gravitymedia.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phing/phing": "^2.14",
        "phpunit/phpunit": "^5.3",
        "sami/sami": "^3.2",
        "scrutinizer/ocular": "^1.3",
        "symfony/finder": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "GravityMedia\\Magickly\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GravityMedia\\MagicklyTest\\": "tests/src/"
        }
    },
    "suggest": {
        "ext-imagick": "to use the Imagick implementation",
        "ext-gmagick": "to use the Gmagick implementation"
    },
    "scripts": {
        "test": "php vendor/bin/phing test",
        "doc": "php vendor/bin/phing doc"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "archive": {
        "exclude": [
            "/.*",
            "/*.php",
            "/build.*",
            "/composer.*",
            "/phpunit.*",
            "/tests"
        ]
    }
}
